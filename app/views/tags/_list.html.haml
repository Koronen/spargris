%table
  %thead
    %tr
      %th Name
      %th Count
  %tbody
  - singular_class_name = "tag"
  - tags.each do |tag|
    %tr
      %td= link_to tag.name, tag_path(tag)
      %td= tag.taggings.length
      %td
        = link_to(image_tag("icons/zoom.png", :alt => "Show #{singular_class_name}", :title => "Show #{singular_class_name}"), tag_path(tag))
        = link_to(image_tag("icons/wrench.png", :alt => "Edit #{singular_class_name}", :title => "Edit #{singular_class_name}"), edit_tag_path(tag))
        = link_to(image_tag("icons/delete.png", :alt => "Delete #{singular_class_name}", :title => "Delete #{singular_class_name}"), tag_path(tag), :confirm => 'Are you sure?', :method => :delete)
  %tfoot
    %tr
      %th Name
      %th Count

= semantic_form_for @user do |f|
  = f.semantic_errors

  = f.inputs do
    = f.input :email
    = f.input :language, :as => :select, :collection => [['English', 'en'], ['Svenska', 'sv']], :include_blank => false
    = f.input :time_zone
    = f.input :password
    = f.input :password_confirmation
  = f.buttons do
    = f.submit "Submit", :class => "btn primary"

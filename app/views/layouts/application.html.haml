!!!
%html
  %head
    %meta{:"http-equiv" => "Content-Type", :content => "text/html; charset=UTF-8"}
    %title= build_title
    %link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = javascript_include_tag :defaults
    = yield(:head)
    = csrf_meta_tag

  %body
    %div#container
      %div#header
        %h1
          = link_to "Spargris", root_url
      %div.clear
        %div#nav
          %ul
            - if logged_in?
              %li.left{:class => active_tab?(:budget) ? "active" : ""}
                = link_to Budget.human_name.pluralize, budgets_url
              %li.left{:class => active_tab?(:budget_posts) ? "active" : ""}
                = link_to BudgetPost.human_name.pluralize, budget_posts_url
              %li.left{:class => active_tab?(:transaction) ? "active" : ""}
                = link_to Transaction.human_name.pluralize, transactions_url
              %li.left{:class => active_tab?(:vendor) ? "active" : ""}
                = link_to Vendor.human_name.pluralize, vendors_url
              %li.left{:class => active_tab?(:tag) ? "active" : ""}
                = link_to ActsAsTaggableOn::Tag.human_name.pluralize, tags_url

              %li.right
                = link_to "Logout", logout_path
              %li.right{:class => active_tab?(:user) ? "active" : ""}
                = link_to User.human_name, current_user
              %li.right
                = link_to "Dashboard", dashboard_path
            - else
              %li.right
                = link_to "Login", login_path
              %li.right
                = link_to "Register", new_user_path
          %div.clear
        
        %div#content
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = yield


!!!
%html
  %head
    %meta{:"http-equiv" => "Content-Type", :content => "text/html; charset=UTF-8"}
    %title= build_title
    %link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = stylesheet_link_tag 'jquery-ui-1.8.14.custom'
    = javascript_include_tag :defaults, 'jquery-ui-1.8.14.custom.min'
    = javascript_include_tag :cocoon
    = yield(:head)
    = csrf_meta_tag

  %body
    %div#container
      %div#header
        %h1
          = link_to "Spargris", root_url
      %div.clear
        %div#nav
          %ul
            - if logged_in?
              %li.left{:class => active_tab?(:budget) ? "active" : ""}
                = link_to Budget.model_name.human.pluralize, budgets_url
              %li.left{:class => active_tab?(:budget_posts) ? "active" : ""}
                = link_to BudgetPost.model_name.human.pluralize, budget_posts_url
              %li.left{:class => active_tab?(:transaction) ? "active" : ""}
                = link_to Transaction.model_name.human.pluralize, transactions_url
              %li.left{:class => active_tab?(:vendor) ? "active" : ""}
                = link_to Vendor.model_name.human.pluralize, vendors_url
              %li.left{:class => active_tab?(:tag) ? "active" : ""}
                = link_to ActsAsTaggableOn::Tag.model_name.human.pluralize, tags_url

              %li.right
                = link_to "Logout", logout_path
              %li.right{:class => active_tab?(:user) ? "active" : ""}
                = link_to User.model_name.human, current_user
              %li.right
                = link_to "Dashboard", dashboard_path
            - else
              %li.right
                = link_to "Login", login_path
              %li.right
                = link_to "Register", new_user_path
          %div.clear
        
        %div#content
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"
          = yield


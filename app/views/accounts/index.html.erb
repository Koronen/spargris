<%- title t('accounts.title') %>
<h2><%= t('accounts.index.header') %></h2>

<ul>
<%- @accounts.each do |account| %>
    <li><%= link_to account.name, account %> (<%= number_to_currency account.transactions.sum(:amount) %>)</li>
<%- end %>
</ul>

<p><%= link_to t('accounts.index.new'), new_account_path %></p>

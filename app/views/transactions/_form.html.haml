= semantic_form_for(@transaction, html: { class: "form-horizontal" }) do |form|
  = form.semantic_errors
  = form.semantic_errors :base

  = form.input :timestamp, as: :string
  = form.input :vendor_name, as: :string
  = form.input :tag_list
  = form.input :description

  = form.inputs :name => "Transaktionsdelar" do
    = form.semantic_fields_for :transaction_items do |item|
      = render 'transaction_item_fields', :f => item
    .links
      = link_to_add_association 'LÃ¤gg till transaktionsdel', form, :transaction_items

  = form.buttons do
    = form.commit_button button_html: { class: "btn-primary" }
